<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thread>
      <tr class= "row">
        <th class= "col-1">ID</th>
        <th class= "col-3">コンテンツ</th>
        <th class= "col-8">ステータス</th>
      </tr>
    </thread>
    <tbody>
      <% @tasks.each do |task| %>  
        <tr class= "row">
          <td class= col-1><%= link_to task.id, task %></td>
          <td class= col-3><%= task.content %></td>
          <td class= col-8><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>

  </div>
<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>