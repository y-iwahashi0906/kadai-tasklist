<h1>id: <%= @task.id %> のメッセージ詳細ページ</h1>


<table class="table table-bordered">
  <tr class ="row">
    <th class = "col-3">コンテンツ</th>
    <td class = "col-9"><%= @task.content %></td>
  </tr>
  <tr class ="row">
    <th class = "col-3">ステータス</th>
    <td class = "col-9"><%= @task.status %></td>
  </tr>
</table>


<%= link_to '一覧に戻る', tasks_path, class: 'btn btn-light' %>
<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>